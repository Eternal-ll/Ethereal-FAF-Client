                    <Setter Property="ui:ControlHelper.CornerRadius" Value="4"/>
                    <Setter Property="Width" Value="60"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Margin" Value="6 0 6 4"/>
