                    />
                <TextBlock Margin="24 0" Foreground="{DynamicResource SystemControlBackgroundBaseMediumHighBrush}"
                           Text="Ethereal FAF client" FontWeight="SemiBold"/>
                <!--<Glyphs
                    Margin="24 0"
                    HorizontalAlignment="Center"
