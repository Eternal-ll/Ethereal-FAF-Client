                        <Style TargetType="oxy:PlotView">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPendingRequest}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
